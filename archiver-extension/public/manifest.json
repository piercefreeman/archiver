{
  "manifest_version": 3,

  "name": "Web Archiver",
  "description": "Archives web requests and responses, with password hashing",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"],
          "run_at": "document_start",
          "all_frames": true
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}